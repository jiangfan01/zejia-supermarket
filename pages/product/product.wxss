.header {
    background: white;
}

.supermarket-name {
    padding: 12px;
    font-size: 18px;
    color: #333;
    font-weight: 600;
    display: flex;
    justify-content: space-between;
}

.product-control {
    padding: 4px 8px;
    color: #67c1b5;
    border: 1px solid #67c1b5;
    font-size: 14px;
    display: flex;
    gap: 4px;
    border-radius: 8px;
}

.content {
    background: white;
}

.subtitle {
    display: flex;
    justify-content: space-around;
    border-bottom: 1px solid rgba(221, 221, 221, 0.3);

}

.subtitle text {
    font-size: 16px;
    color: #555;
}

.subtitle .active {
    color: #67c1b5;
    border-bottom: 2px solid #67c1b5;
    padding-bottom: 4px;
}

.side {
    display: flex;
    flex-direction: column;
    gap: 8px;
    background: #f8f8f8;
}

.side-item {
    padding: 12px;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
}

.chose {
    background: white;
    border-left: 2px solid #67c1b5;

}

.goods {
    display: flex;
}

.tabs {
    width: 100%;
}

.category-control {
    display: flex;
    gap: 4px;
    align-items: center;
    justify-content: center;
    padding: 12px 0;
}

.category-control-text {
    font-size: 14px;
    color: #67c1b5;
}