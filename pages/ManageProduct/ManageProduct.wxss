/* pages/product/product.wxss */
.container {
    padding: 20px;
}

.category-section {
    margin-top: 20px;
}

.category-title {
    font-size: 18px;
    font-weight: bold;
}

.category-list {
    display: flex;
    flex-wrap: wrap;
}

.category-item {
    margin: 10px;
    padding: 8px 16px;
    background-color: #f1f1f1;
    border-radius: 5px;
    cursor: pointer;
}

.product-list {
    margin-top: 20px;
}

.product-item {
    display: flex;
    justify-content: space-between;
    margin: 10px 0;
}

.add-btn, .edit-btn, .delete-btn {
    padding: 5px 10px;
    margin: 5px;
}

.add-btn {
    background-color: #4CAF50;
    color: white;
}

.edit-btn {
    background-color: #FFA500;
    color: white;
}

.delete-btn {
    background-color: #F44336;
    color: white;
}
