/* 位置部分的样式 */
.location-box {
    display: flex;
    gap: 24rpx;
    flex-direction: column;
}

.location-title {
    font-size: 20px;
    color: #333;
    font-weight: bold;
}

.location-text {
    display: flex;
}

.location {
    font-size: 16px;
    color: #555;
    font-weight: normal;
}

.header {
    display: flex;
    flex-direction: column;
    gap: 8px;
    background: white;
    padding: 10px 20px;
    border-radius: 8px;
}

.supermarket-title {
    font-size: 18px;
    color: #333;
    font-weight: 600;
}

.search {
    margin-top: 12px;
}

.content {
    background: white;
    padding: 16px;
}

.subtitle {
    padding: 24px 0;
    display: flex;
    justify-content: space-around;
}

.subtitle text {
    font-size: 16px;
    color: #555;
}

.subtitle .active {
    color: #67c1b5;
    border-bottom: 2px solid #67c1b5;
    padding-bottom: 6px;
}

/* 商品列表样式 */
.goods-list {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-top: 12px;

}

.product-item {
    display: flex;
    flex-direction: column;
    gap: 24px;
    flex-shrink: 0;
    width: calc(50% - 6px);
    align-items: center;
}

.product-img {
    width: 120px;
    height: 120px;
    border-radius: 8px;
}

.product-img image {
    width: 100%;
    height: 100%;
    border-radius: 8px;
    object-fit: cover;
}

.product-info{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 120px;
}

.product-name{
    font-size: 14px;
    color: #aaa;
}

.product-price{
    font-size: 14px;
    color: #e54d42;
}